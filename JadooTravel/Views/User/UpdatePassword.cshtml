@model UpdateUserPasswordDto
@{
    Layout = "~/Views/Admin/Layout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="row g-0">
        <!-- Sol taraf: Güvenlik görseli -->
        <div class="col-md-4 d-flex align-items-center justify-content-center p-4 bg-light">
            <img src="~/Admin/assets/images/logos/security.jpg"
                 alt="Password Security"
                 class="img-fluid rounded"
                 style="max-height: 200px;" />
        </div>

        <!-- Sağ taraf: Form -->
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-3">Şifre Güncelle</h5>

                <form asp-action="UpdatePassword" asp-controller="User" method="post">
                    <input type="hidden" asp-for="UserId" />

                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label">Mevcut Şifre</label>
                        <input asp-for="CurrentPassword" type="password" class="form-control" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
                        <input asp-for="NewPassword" type="password" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmNewPassword" class="form-label">Yeni Şifre (Tekrar)</label>
                        <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
                        <a asp-action="Index" asp-controller="User" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


