@model List<ResultCategoryDto>
@inject JadooTravel.Services.LanguageService.LanguageService LanguageService
@using Microsoft.AspNetCore.Http

@{

    var lang = Context.Session.GetString("lang") ?? "tr";

    var sectionTitle = await LanguageService.TranslateAsync("Kategoriler", lang);
    var sectionSubtitle = await LanguageService.TranslateAsync("Hizmetlerimizde Sınır Tanımıyoruz", lang);
    var noCategoryText = await LanguageService.TranslateAsync("Kategori bulunamadı.", lang);
}

<section class="pt-5 pt-md-9" id="service">
    <div class="container">
        <div class="position-absolute z-index--1 end-0 d-none d-lg-block">
            <img src="/public/assets/img/category/shape.svg" style="max-width: 200px" alt="service" />
        </div>

        <!-- Başlık -->
        <div class="mb-7 text-center">
            <h5 class="text-secondary">@sectionTitle</h5>
            <h3 class="fs-xl-10 fs-lg-8 fs-7 fw-bold font-cursive text-capitalize">@sectionSubtitle</h3>
        </div>

        <!-- Kategori Kartları -->
        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model.Where(x => x.Status == true))
                {
                    <div class="col-lg-3 col-sm-6 mb-6">
                        <div class="card service-card shadow-hover rounded-3 text-center align-items-center">
                            <div class="card-body p-xxl-5 p-4">
                                <img src="@item.IconUrl" width="75" alt="@item.CategoryName" />
                                <h4 class="mb-3">@item.CategoryName</h4>
                                <p class="mb-0 fw-medium">@item.Description</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">@noCategoryText</p>
                </div>
            }
        </div>
    </div>
</section>
