@inject JadooTravel.Services.LanguageService.LanguageService LanguageService
@using Microsoft.AspNetCore.Http

@{
    var lang = Context.Session.GetString("lang") ?? "tr";

    // 🧠 Türkçe kaynak, AI diğer dillere çevirebilir
    var hakkinda = await LanguageService.TranslateAsync("Hakkında", lang);
    var kariyer = await LanguageService.TranslateAsync("Kariyer", lang);
    var mobil = await LanguageService.TranslateAsync("Mobil", lang);
    var sirket = await LanguageService.TranslateAsync("Şirket", lang);

    var iletisim = await LanguageService.TranslateAsync("İletişim", lang);
    var yardim = await LanguageService.TranslateAsync("Yardım / SSS", lang);
    var basin = await LanguageService.TranslateAsync("Basın", lang);
    var ortaklik = await LanguageService.TranslateAsync("Ortaklık", lang);

    var dahaFazla = await LanguageService.TranslateAsync("Daha Fazlası", lang);
    var ucakUcretleri = await LanguageService.TranslateAsync("Uçak Ücretleri", lang);
    var havayolu = await LanguageService.TranslateAsync("Havayolu", lang);
    var ucuzIpuclari = await LanguageService.TranslateAsync("Ucuz Uçuş İpuçları", lang);

    var uygulamaKesfet = await LanguageService.TranslateAsync("Uygulamamızı Keşfet", lang);
    var footerDesc = await LanguageService.TranslateAsync("Seyahatinizi dakikalar içinde planlayın, uzun süreli kontrol sizin elinizde olsun.", lang);
}

<section class="pb-0 pb-lg-4">
    <div class="container">
        <div class="row">
            <!-- Logo ve açıklama -->
            <div class="col-lg-3 col-md-7 col-12 mb-4 mb-md-6 mb-lg-0 order-0">
                <img class="mb-4" src="/public/assets/img/logo2.svg" width="150" alt="jadoo" />
                <p class="fs--1 text-secondary mb-0 fw-medium">@footerDesc</p>
            </div>

            <!-- Şirket -->
            <div class="col-lg-2 col-md-4 mb-4 mb-lg-0 order-lg-1 order-md-2">
                <h4 class="footer-heading-color fw-bold font-sans-serif mb-3 mb-lg-4">@sirket</h4>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2"><a class="link-900 fs-1 fw-medium text-decoration-none" href="#!">@hakkinda</a></li>
                    <li class="mb-2"><a class="link-900 fs-1 fw-medium text-decoration-none" href="#!">@kariyer</a></li>
                    <li class="mb-2"><a class="link-900 fs-1 fw-medium text-decoration-none" href="#!">@mobil</a></li>
                </ul>
            </div>

            <!-- İletişim -->
            <div class="col-lg-2 col-md-4 mb-4 mb-lg-0 order-lg-2 order-md-3">
                <h4 class="footer-heading-color fw-bold font-sans-serif mb-3 mb-lg-4">@iletisim</h4>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2"><a class="link-900 fs-1 fw-medium text-decoration-none" href="#!">@yardim</a></li>
                    <li class="mb-2"><a class="link-900 fs-1 fw-medium text-decoration-none" href="#!">@basin</a></li>
                    <li class="mb-2"><a class="link-900 fs-1 fw-medium text-decoration-none" href="#!">@ortaklik</a></li>
                </ul>
            </div>

            <!-- Daha Fazlası -->
            <div class="col-lg-2 col-md-4 mb-4 mb-lg-0 order-lg-3 order-md-4">
                <h4 class="footer-heading-color fw-bold font-sans-serif mb-3 mb-lg-4">@dahaFazla</h4>
                <ul class="list-unstyled mb-0">
                    <li class="mb-2"><a class="link-900 fs-1 fw-medium text-decoration-none" href="#!">@ucakUcretleri</a></li>
                    <li class="mb-2"><a class="link-900 fs-1 fw-medium text-decoration-none" href="#!">@havayolu</a></li>
                    <li class="mb-2"><a class="link-900 fs-1 fw-medium text-decoration-none" href="#!">@ucuzIpuclari</a></li>
                </ul>
            </div>

            <!-- Sosyal medya ve uygulama -->
            <div class="col-lg-3 col-md-5 col-12 mb-4 mb-md-6 mb-lg-0 order-lg-4 order-md-1">
                <div class="icon-group mb-4">
                    <a class="text-decoration-none icon-item shadow-social" id="facebook" href="#!"><i class="fab fa-facebook-f"></i></a>
                    <a class="text-decoration-none icon-item shadow-social" id="instagram" href="#!"><i class="fab fa-instagram"></i></a>
                    <a class="text-decoration-none icon-item shadow-social" id="twitter" href="#!"><i class="fab fa-twitter"></i></a>
                </div>
                <h4 class="fw-medium font-sans-serif text-secondary mb-3">@uygulamaKesfet</h4>
                <div class="d-flex align-items-center">
                    <a href="#!"><img class="me-2" src="/public/assets/img/play-store.png" alt="play store" /></a>
                    <a href="#!"><img src="/public/assets/img/apple-store.png" alt="apple store" /></a>
                </div>
            </div>
        </div>
    </div>
</section>
